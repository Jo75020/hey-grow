<div class="banner-forfaits" style="background-image:linear-gradient(-225deg, rgb(127, 222, 212) 0%, rgba(127, 222, 212, 0.65) 30%), url('<%= asset_path("banner-checkout.jpg") %> ')">
<div class="padded"></div>
  <div class="banner-content">
    <% image_tag "logo.png" %>
    <h1><h1>Vous allez commander un site <%= @order.forfait_title %></h1>
<%= form_tag order_payments_path(@order) do %>
  <article>
    <label class="amount">
      <span>Total: <%= humanized_money_with_symbol(@order.amount) %></span>
    </label>
  </article>


  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="Forfait <%= @order.forfait_title %>"
    data-description="Plus qu'un clic !"
    data-amount="<%= @order.amount_cents %>"
    data-currency="<%= @order.amount.currency %>"></script>

<% end %></h1>
</div>
<div class="padded"></div>




<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
    $("#mynav").toggleClass("displayed");
    });
  <% end %>
<% end %>
