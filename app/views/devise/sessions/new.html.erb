<div class="banner-sign-in" style="background-image:url('<%= asset_path("21097.jpg") %> ')">
  <div class="banner-content">
<div class="text-center ">
<div class="container">
   <div class="row">
     <div class="mcontent col-xs-4 col-xs-offset-4">
        <div class="mheader">
          <button type="button" class="close" data-dismiss="modal">X</button>
          <h4 class="modal-title">As tu déja un compte ?</h4>
          <p>Il semble qu'une erreur ce soit glissé dans le formulaire...</p>
        </div>
        <div class="mbody">
        <%= simple_form_for(resource, as: resource_name, url: user_session_path, html: {id: "form-signin"}) do |f| %>
        <p>Email</p>
        <%= f.input :email, label: false, required: true, autofocus: true %>
        <p>Password</p>
        <%= f.input :password, label: false, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        </div>
        <div class="mfooter">
          <%= f.button :submit, "Se connecter", class: 'btn-nav' %>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <% end %>
        </div>
      </div>
    </div>
</div>
  </div>
</div>










<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
    $("#mynav").toggleClass("displayed");
    });
  <% end %>
<% end %>
