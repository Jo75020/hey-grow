<div class="banner-forfaits" style="background-image:url('<%= asset_path("banner-forfaits.png") %> ')">
  <div class="banner-content">
    <% image_tag "logo.png" %>
    <h1>Nos Offres <span style="color: #7fded4;">FAST</span> and <span style="color: #ffd073;">CLEAN</span> <span style="color: #7fded4;">UP !</span></h1>
    </br>
    </br>
    <p><span style="color: #7fded4;">•</span> Site Vitrine <span style="color: #7fded4;">•</span> E-Commerce <span style="color: #7fded4;">•</span> Premium <span style="color: #7fded4;">•</span> Prototype&MVP</p>
  </div>
  <div class="padded-little"></div>
  <i class="fa fa-arrow-down" id="go-down" style="color:black;font-size: 32px;cursor: pointer;"></i>
</div>

<% f = Forfait.first  %>

<div class="col-md-6 forfait-wrapper" id="here-is-down" style="background:linear-gradient(-225deg, rgb(250, 116, 119) 0%, rgb(213, 76, 84) 30%)">
  <div class="col-md-6">
    <p style="text-align: right;"><%= humanized_money_with_symbol(f.price) %></p>
  <h3><%= f.title  %></h3>
  <span><%= f.description %>.</span>
  </br>
  </br>
  <%= form_tag orders_path do %>
  <%= hidden_field_tag 'forfait_id', f.id %>
  <%= submit_tag 'Commandez maintenant !', class: 'btn-forfaits' %>
<% end %>
  </div>
  <div class="col-md-6">
    <%= image_tag "forfait-1.png" %>
  </div>
</div>

