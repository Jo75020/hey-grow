  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo-4.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Search form -->


    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Notification -->


      <!-- Profile picture and dropdown -->


    <% else %>


    <% end %>

    <!-- Button (call-to-action) -->
    <%= link_to "Forfaits", forfaits_path, class: "btn" %>
    <%= link_to "Formations", forfaits_path, class: "btn" %>
 <% if user_signed_in? %>
        <p class="btn-nav"><%= current_user.username %></p>
        <%= link_to destroy_user_session_path, method: :delete, class: 'btn-nav' do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "") %>
          <% end %>

        <% else %>
        <%= link_to "S\'inscrire", new_user_registration_path, :id => 'login', "data-toggle" => "modal", 'data-target' => '#signUpModal', class:"btn-nav" %>
